html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width")
    title #{title} | #{page}
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/animate.min.css')
  body.animated.fadeIn(class="#{pageClass}")
    .social-bar
      ul
        li
          a(href="https://twitter.com/hackferencebrum") t
        li
          a(href="https://github.com/hackference") g
        li
          a(href="http://lanyrd.com/2014/hackference") l
        li
          a(href="https://joind.in/event/hackference2014") j
    .site-wrapper.clearfix
      .wrapper.clearfix
        header.site-header
          nav.nav-bar.clearfix
            ul
              include includes/menu
      block content
      include includes/subscribe
      footer
        include includes/sponsors
        .full.dark-grey
          .wrapper
            .third
              p.text-left
                a(href="http://confcodeofconduct.com/") Conference Code of Conduct
            .third &nbsp;
            .third
              p.text-right
                a(href="http://hackcodeofconduct.org/") Hackathon Code of Conduct
          .wrapper
            .third
              p.text-left &copy;2014 Hackference | Run by
                  a(href="https://twitter.com/ukmadlz") Mike Elsmore
            .third
              p Photography by
                  a(href="https://www.flickr.com/photos/andypiper/sets/72157635300181024/")  Andy Piper
                  |  &amp;
                  a(href="http://www.cassandralane.co.uk")  Cassandra Lane
            .third
              p.text-right Website by
                  a(href="http://b9media.co.uk") B9 Media
                  |  | Hosted on
                  a(href="https://www.heroku.com") Heroku
      .scrolled-nav
        .wrapper.clearfix
          a(href="/")
            img.alt-logo(src="/images/logo.png" alt="logo")
          .mobile-show
            a.menu
              span
          ul.mobile-hide
            include includes/menu
      .site-overlay
        a.overlay-close close
        .code-wrapper
          block tickets
